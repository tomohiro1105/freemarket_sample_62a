.new-items-by-category__wrapper--list__bottom
  %ul
    %li
      = link_to item_path(hobby), class: "new-items-by-category__wrapper--list__bottom__link" do
        .new-items-by-category__wrapper--list__bottom__image
          = image_tag "#{hobby.item_images.first.image_url}", size: "188x188", alt: "商品イメージ"
          %span
            =format_currency(hobby.price)
        .new-items-by-category__wrapper--list__bottom__item-name 
          =hobby.name.truncate(25)
    
