.new-items-by-category__wrapper--list__bottom
  %ul
    %li
      = link_to "items/#{louis.id}", class: "new-items-by-category__wrapper--list__bottom__link" do
        .new-items-by-category__wrapper--list__bottom__image
          = image_tag "#{louis.item_images.first.image_url}", size: "188x188", alt: "商品イメージ"
          %span
            ¥
            = louis.price
        .new-items-by-category__wrapper--list__bottom__item-name 
          =louis.name.truncate(25)
    
