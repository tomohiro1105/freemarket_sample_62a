.wrapper
  .login-header
    .login-header__title
      .login-header__title_logo
        = link_to (image_tag "fmarket_logo_red.svg", size: "185x49", alt: "Fmarket",class: "login-header__upper__title-logo__link"), :root
  .main
    .main__container
      %h2.head-title 購入内容の確認
      .buy-content
        .buy-content__inner
          %h3.buy-item-image
            = image_tag "footer_image.png",size: "88×88"
          %p.buy-item-name
            = @item.name
          %form.buy-form
            .buy-price 
              .buy-price__text
                .buy-price__text--num
                  =format_currency(@item.price)
                  %span
                    送料込み
            .buy-accordion
              %ul.accordion-parent
                %li.accordion-toggle ポイントはありません
            %ul.buy-price-table
              %li.buy-price-row
                .buy-price-cell 支払い金額
                .buy-price-num 
                  =format_currency(@item.price)
          = link_to transactions_path(@item), class:"btn-default" do
            購入する
      .buy-content
        .buy-content__inner
          .buy-user-info-title 
            配送先
          .buy-user-info-text 
            〒
            %span
              =@address.address.post_code
            =@address.address.address
            =@address.address.building
          %br
            =@address.last_name
            =@address.first_name
          .buy-user-info-fix 
            = link_to "#", class:"buy-user-info-fix" do
              変更する
              %i.fas.fa-chevron-right
              
      .buy-content
        .buy-content__inner
          支払い方法
        .card-contents__main__section
          = form_with(url: "#", method: :DELETE, class: "card-contents__main__section__form") do |f|
            .card-contents__main__section__form__number
              = "**** **** **** " + @card_information.last4
            .card-contents__main__section__form__date
              - exp_month = @card_information.exp_month.to_s
              - exp_year = @card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            = image_tag "credit-cards/#{@card_src}", width: '26', height: '20', alt: @card_brand, id: "card_image", class: "card-contents__main__section__form__image"  
          .buy-user-info-fix-b
            = link_to  "#", class:"buy-user-info-fix" do
              変更する
              %i.fas.fa-chevron-right