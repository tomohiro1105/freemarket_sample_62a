      住所入力
  .login-header-registration__form    
    -# = form_for @user ,url: new_credit_card_path, method: :get, html: {class: 'first-main__box'} do |f|
    = form_for @user ,url: payment_signup_index_path, method: :post, html: {class: 'first-main__box'} do |f|
      .login-header-registration__form-content
        .form-group
        -#   = f.label 'お名前' ,class: 'login-header-registration__label'
        -#   %span.login-header-registration__form--must 必須
        -#   %br/
        -#   = f.text_field :last_name, placeholder: '例）山田',required: true, class: 'input-default'
        -#   = f.text_field :first_name, placeholder: '例）彩',required: true, class: 'input-default'
        -# .form-group
        -#   = f.label 'お名前カナ' ,class: 'login-header-registration__label'
        -#   %span.login-header-registration__form--must 必須
        -#   %br/
        -#   = f.text_field :last_name_kana, placeholder: '例）ヤマダ',required: true, class: 'input-default'
        -#   = f.text_field :first_name_kana, placeholder: '例）アヤ',required: true, class: 'input-default'
        
        = f.fields_for :address do |i|
          .form-group 
            = i.label '郵便番号' ,class: 'login-header-registration__label' 
            %span.login-header-registration__form--must 必須
            %br/
            = i.text_field :post_code, placeholder: '例）123456',required: true,class: 'input-default'
          .form-group 
            = i.label '都道府県', class: 'login-header-registration__label' 
            %span.login-header-registration__form--must 必須
            %br/
            .prefecture-select-wrap
              = i.collection_select :prefecture_id, Prefecture.all, :id, :name, placeholder: '例）北海道',required: true,class: 'selct-box'
              %i.prefecture.fas.fa-chevron-down
          .form-group 
            = i.label '市区町村', class: 'login-header-registration__label'
            %span.login-header-registration__form--must 必須
            %br/
            = i.text_field :address, placeholder: '例）横浜市緑区',required: true,class: 'input-default'
          .form-group 
            = i.label '番地', class: 'login-header-registration__label'
            %span.login-header-registration__form--must 必須
            %br/
            = i.text_field :address, placeholder: '例）青山1−1−1',required: true,class: 'input-default'
          .form-group   
            = i.label '建物', class: 'login-header-registration__label'
            %span.login-header-registration__form--option 任意
            %br/
            = i.text_field :building, placeholder: '例）柳ビル103',class: 'input-default'
        .form-group 
          = f.label '電話', class: 'login-header-registration__label'
          %span.login-header-registration__form--option 任意
          %br/
          = f.text_field :telephone, placeholder: '例）09012345678',class: 'input-default'
          
          = f.submit class: 'btn-default',value:'次へすすむ'