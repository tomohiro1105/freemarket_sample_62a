住所入力

= form_for @user @adress, url: payment_signup_index_path, method: :get, html: {class: 'first-main__box'} do |f|
  = f.label 'お名前' ,class: 'last_name' 
  .form_required-box
    必須
  = f.text_field :last_name, placeholder: '例）山田'  
  = f.text_field :first_name, placeholder: '彩'

  = f.label 'お名前カナ' ,class: 'last_name_kana' 
  .form_required-box
    必須
  = f.text_field :last_name_kana, placeholder: '例）ヤマダ'
  = f.text_field :first_name_kana, placeholder: '例)アヤ'

  = f.label '郵便番号' ,class: 'post_code' 
  .form_required-box
    必須
  = f.text_field :post_code, placeholder: '例）123456'
  
  = f.label '都道府県', class: 'prefecuture' 
  .form_required-box
    必須
  = f.text_field :prefecuture, placeholder: '例）北海道'

  = f.label '市区町村', class: 'address' 
  .form_required-box
    必須
  = f.text_field :address, placeholder: '例）横浜市緑区'

  = f.label '番地', class: 'address' 
  .form_required-box
    必須
  = f.text_field :address, placeholder: '例）青山1−1−1'
  
  = f.label '建物', class: 'building'
  .form_required-box
    任意
  = f.text_field :building, placeholder: '例）柳ビル103'

  = f.label '電話', class: 'telephone'
  .form_required-box
    任意
  = f.text_field :telephone, placeholder: '例）09012345678'
  
