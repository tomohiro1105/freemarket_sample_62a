住所入力

= form_for @user ,url: payment_signup_index_path, method: :post, html: {class: 'first-main__box'} do |f|
  = f.label 'お名前' ,class: 'last_name' 
  %span.form_required-box 必須
  %br/
  = f.text_field :last_name, placeholder: '例）山田'  
  = f.text_field :first_name, placeholder: '彩'

  = f.label 'お名前カナ' ,class: 'last_name_kana' 
  %span.form_required-box 必須
  %br/
  = f.text_field :last_name_kana, placeholder: '例）ヤマダ'
  = f.text_field :first_name_kana, placeholder: '例)アヤ'

  = f.fields_for :address do |i|
    = i.label '郵便番号' ,class: 'post_code' 
    %span.form_required-box 必須
    %br/
    = i.text_field :post_code, placeholder: '例）123456'

    = i.label '都道府県', class: 'prefecture' 
    %span.form_required-box 必須
    %br/
    = i.text_field :prefecture, placeholder: '例）北海道'

    = i.label '市区町村', class: 'address' 
    %span.form_required-box 必須
    %br/
    = i.text_field :address, placeholder: '例）横浜市緑区'

    = i.label '番地', class: 'address' 
    %span.form_required-box 必須
    %br/
    = i.text_field :address, placeholder: '例）青山1−1−1'
    
    = i.label '建物', class: 'building'
    %span.form_option-box 任意
    %br/
    = i.text_field :building, placeholder: '例）柳ビル103'

  = f.label '電話', class: 'telephone'
  .form_option-box 任意
  %br/
  = f.text_field :telephone, placeholder: '例）09012345678'
  
  = f.submit class: 'mixinを指定',value:'次へすすむ'